<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Socketpost.App.ViewModels;assembly=Socketpost.App"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Socketpost.App.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Socketpost.App">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="10">
      <TextBox Watermark="Address" Text="{Binding Address, Mode=TwoWay}"/>
      <Button Width="160" Command="{Binding OnConnectCommand}">Connect</Button>
      
      <Separator/>
      
      <TextBlock Text="Output:" />
      
      <TextBox AcceptsReturn="True"
                TextWrapping="Wrap"
                Text="{Binding Output, Mode=OneWay}"
                Focusable="false"
               Height="100"
      />
      
      <Separator/>
      <Grid
        IsVisible="{Binding Service, Converter={x:Static ObjectConverters.IsNotNull}}">
        <TextBox
          Watermark="message"
          Text="{Binding Message, Mode=OneWayToSource}"
        />
        <Button
          Width="160"
          Command="{Binding OnSendMessageCommand}"
        >
          Send
        </Button>
      </Grid>

    </StackPanel>


</Window>
